<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_perfil_scene"
    tools:context=".PerfilFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/icono_perfil" />

    <TextView
        android:id="@+id/nombreUsuario"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView2"
        android:layout_marginTop="41dp"
        android:gravity="center"
        android:text="Nombre usuario"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nombreUsuario"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="Cantidad puntos"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Cerrar_sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Borrar_datos"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/lightblue"
        android:gravity="center"
        android:text="Cerrar sesiÃ³n"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Borrar_datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/darkred"
        android:gravity="center"
        android:text="Borrar datos"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />


</RelativeLayout>
